<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Read Users</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-900 text-white min-h-screen p-10">

  <!-- Back to Home -->
  <div class="mb-6">
    <a href="/" class="text-blue-400 hover:text-blue-500 font-medium">â¬… Back to Home</a>
  </div>

  <% if(users.length> 0) { %>
    <!-- Heading -->
    <h1 class="text-3xl font-bold tracking-tight mb-6">All Users</h1>

    <!-- Users Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">

      <% users.forEach(function(user) { %>
        <!-- User Card -->
        <div class="bg-gray-800 rounded-xl p-5 shadow-lg hover:shadow-2xl transition">
          <div class="w-full h-52 bg-gray-700 rounded-lg flex items-center justify-center overflow-hidden">
            <img class="w-full h-full object-top" src="<%= user.image %>" alt="">

          </div>
          <h3 class="text-xl mt-4 font-semibold">
            <%= user.name %>
          </h3>
          <h5 class="text-gray-400 text-sm">
            <%= user.email %>
          </h5>
          <div class="flex gap-4 mt-6">
            <a href="/edit/<%= user._id %>" class="text-blue-400 hover:underline">Edit User</a>
            <a href="/delete/<%= user._id %>" class="text-red-500 hover:underline">Delete</a>
          </div>
        </div>
        <% }) %>
    </div>

    <% } else { %>
      <div class="flex items-center justify-center min-h-[70vh]">
        <h3 class="text-2xl font-extrabold text-zinc-400 tracking-wide">
          ðŸš« No Users Yet ðŸš«
        </h3>
      </div>
      <% } %>

</body>

</html>